        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw_maghrib"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:thumb="@drawable/custom_thumb"
            app:layout_constraintEnd_toStartOf="@id/tv_maghrib_time"
            app:track="@drawable/custom_track" />

        <TextView
            android:id="@+id/tv_maghrib_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_maghrib"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_maghrib"
            tools:text="18.00 WIB" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_isya"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/cl_maghrib"
        tools:layout_editor_absoluteX="24dp">

        <ImageView
            android:id="@+id/iv_isya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
