            app:tint="@color/green_base" />

        <TextView
            android:id="@+id/tv_isya"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_semibold"
