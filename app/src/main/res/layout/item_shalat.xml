<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_shubuh"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="24dp">

        <ImageView
            android:id="@+id/iv_shubuh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/shubuh"
            android:src="@drawable/ic_shalat_shubuh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/green_base" />

        <TextView
            android:id="@+id/tv_shubuh"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/shubuh"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_shubuh"
            app:layout_constraintStart_toEndOf="@id/iv_shubuh"
            app:layout_constraintTop_toTopOf="@id/iv_shubuh" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw_shubuh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:thumb="@drawable/custom_thumb"
            app:layout_constraintEnd_toStartOf="@id/tv_shubuh_time"
            app:track="@drawable/custom_track" />

        <TextView
            android:id="@+id/tv_shubuh_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_shubuh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_shubuh"
            tools:text="05.00 WIB" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_dzuhur"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/cl_shubuh"
        tools:layout_editor_absoluteX="24dp">

        <ImageView
            android:id="@+id/iv_dzuhur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/dzuhur"
            android:src="@drawable/ic_shalat_dzuhur"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/green_base" />

        <TextView
            android:id="@+id/tv_dzuhur"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/dzuhur"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_dzuhur"
            app:layout_constraintStart_toEndOf="@id/iv_dzuhur"
            app:layout_constraintTop_toTopOf="@id/iv_dzuhur" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sw_dzuhur"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:thumb="@drawable/custom_thumb"
            app:layout_constraintEnd_toStartOf="@id/tv_dzuhur_time"
            app:track="@drawable/custom_track" />

        <TextView
            android:id="@+id/tv_dzuhur_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dzuhur"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_dzuhur"
            tools:text="12.00 WIB" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_ashar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/cl_dzuhur"
        tools:layout_editor_absoluteX="24dp">

        <ImageView
            android:id="@+id/iv_ashar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
